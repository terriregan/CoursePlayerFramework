<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" width="100%" 
				accessibilityName="{data.title}" 
				mouseChildren="false">
	
	<s:Group width="100%">
		<s:layout>
			<s:HorizontalLayout paddingBottom="10" paddingTop="10" />
		</s:layout>
		
		<s:Label width="30" text="{'#'+ data.screenNumber}" paddingLeft="5" />
		<s:Label text="{data.title}" width="100%" 
				 paddingRight="5"/>
	</s:Group>
	
	
	
	<s:Line width="100%">
		<s:stroke>
			<s:SolidColorStroke color="#e2e2e2"  />
		</s:stroke>
	</s:Line>
	
</s:ItemRenderer>
